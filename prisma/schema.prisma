generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
}

model Lead {
  id        String    @id @default(uuid())
  name      String?
  phone     String    @unique
  email     String?
  status    String    @default("NEW")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  activeBot Boolean   @default(true)
  info      Json?
  intent    String?
  messages  Message[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  sender    String
  createdAt DateTime @default(now())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id])
}

model Settings {
  id    String @id @default(uuid())
  key   String @unique
  value String
}

model KnowledgeBase {
  id        String   @id @default(uuid())
  tag       String   @unique
  content   String
  updatedAt DateTime @updatedAt
}

model ConnectionInstance {
  id            String    @id @default(uuid())
  name          String    @unique
  instanceId    String    @unique
  status        String    @default("DISCONNECTED")
  version       String?
  type          String?
  lastSync      DateTime?
  webhookStatus String?   @default("INACTIVE")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model TrialClass {
  id            String    @id @default(uuid())
  name          String
  phone         String
  level         String
  availability  Json
  observations  String?
  status        String    @default("PENDING")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  archived      Boolean   @default(false)
  scheduledDate DateTime?
  sport         String    @default("TÃªnis")
  tags          String[]  @default([])
  birthDate     String?
  courtId       String?
  cpf           String?
  email         String?
  teacherId     String?
  isConverted   Boolean   @default(false)
  court         Court?    @relation(fields: [courtId], references: [id])
  teacher       Teacher?  @relation(fields: [teacherId], references: [id])
}

model WebhookLog {
  id        String   @id @default(uuid())
  event     String
  instance  String?
  data      Json
  createdAt DateTime @default(now())

  @@index([instance])
  @@index([event])
  @@index([createdAt])
}

model Teacher {
  id           String       @id @default(uuid())
  name         String
  phone        String       @unique
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  active       Boolean      @default(true)
  email        String?
  trialClasses TrialClass[]
}

model Court {
  id           String       @id @default(uuid())
  name         String       @unique
  color        String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  trialClasses TrialClass[]
}

model Automation {
  id         String   @id @default(uuid())
  stage      String   @unique
  teacherMsg String?
  studentMsg String?
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model AutomationLog {
  id           String   @id @default(uuid())
  type         String
  stage        String
  targetPhone  String
  targetName   String
  message      String
  status       String
  error        String?
  requestData  Json?
  responseData Json?
  instanceName String?
  createdAt    DateTime @default(now())

  @@index([createdAt])
  @@index([targetPhone])
}
