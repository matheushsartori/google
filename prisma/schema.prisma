generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
}

model Lead {
  id        String    @id @default(uuid())
  name      String?
  phone     String    @unique
  email     String?
  status    String    @default("NEW")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  activeBot Boolean   @default(true)
  info      Json?
  intent    String?
  messages  Message[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  sender    String
  createdAt DateTime @default(now())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id])
}

model Settings {
  id    String @id @default(uuid())
  key   String @unique
  value String
}

model KnowledgeBase {
  id        String   @id @default(uuid())
  tag       String   @unique
  content   String
  updatedAt DateTime @updatedAt
}

model ConnectionInstance {
  id            String   @id @default(uuid())
  name          String   @unique
  instanceId    String   @unique
  status        String   @default("DISCONNECTED")
  version       String?
  type          String?
  lastSync      DateTime?
  webhookStatus String?  @default("INACTIVE")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TrialClass {
  id            String    @id @default(uuid())
  name          String
  phone         String
  email         String?
  cpf           String?
  birthDate     String?
  sport         String    @default("Tênis")
  level         String    // Iniciante, Intermediário, Avançado
  availability  Json      // { days: [], period: "" }
  observations  String?
  status        String    @default("PENDING") // PENDING, CONFIRMED, CANCELLED, ARCHIVED
  scheduledDate DateTime?
  tags          String[]  @default([])
  archived      Boolean   @default(false)
  isConverted   Boolean   @default(false)
  teacherId     String?
  teacher       Teacher?  @relation(fields: [teacherId], references: [id])
  courtId       String?
  court         Court?    @relation(fields: [courtId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model WebhookLog {
  id        String   @id @default(uuid())
  event     String
  instance  String?
  data      Json
  createdAt DateTime @default(now())

  @@index([instance])
  @@index([event])
  @@index([createdAt])
}

model Teacher {
  id           String       @id @default(uuid())
  name         String
  email        String?
  phone        String       @unique
  active       Boolean      @default(true)
  trialClasses TrialClass[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Court {
  id           String       @id @default(uuid())
  name         String       @unique
  color        String
  trialClasses TrialClass[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Automation {
  id          String   @id @default(uuid())
  stage       String   @unique // PENDING, CONFIRMED, CANCELLED
  teacherMsg  String?  // Ex: "Olá {teacher_name}, nova aula agendada para {student_name} na quadra {court_name} às {time}."
  studentMsg  String?  // Ex: "Olá {student_name}, sua aula de {sport} está confirmada para {date} às {time} na {court_name}."
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
